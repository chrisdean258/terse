process_line = \{ split(\0, ": ")[1] -> \{replace(\0, ";", ",")} -> process_game -> power }
process_game = \{ split(\0, ", ") |> encode -> maxs }

encode = \{
	line = split(\0, " ")
	count = int(line[0])
	color = line[1]
	if color == "red" c = (count, 0, 0)
	if color == "green" c = (0, count, 0)
	if color == "blue" c = (0, 0, count)
	c
}

maxs = \{
	m = (0, 0, 0)
	for v in \0 {
		if v[0] > m[0] m = (v[0], m[1], m[2])
		if v[1] > m[1] m = (m[0], v[1], m[2])
		if v[2] > m[2] m = (m[0], m[1], v[2])
	}
	m
}

power = \{\0[0] * \0[1] * \0[2]}


int = \{
	val = 0
	for c in \0 {
		val = val * 10 + (c - '0')
	}
	val
}

sum = \{
	s = 0
	for v in \0 {
		s = s + v 
	}
	s
}

print(stdin |> process_line -> sum)
